<div class="flex flex-col md:flex-row justify-center flex-wrap items-center mt-2">
<% if @categories.empty? %>
    <div class="w-full h-full justify-center flex flex-col">
    <h2 class="text-4xl mx-auto mt-44 max-w-md text-center pb-44">Welcome to the app!<br />
    <p class="text-xl mt-4 text-gray-500"> Try adding some categories using the green button! </p></h2>
    </div>
<% else %>
<% @categories.each do |category| %>
    <%= render 'card',category: category %>
<% end %>
<% end %>
    <button type="button" class="px-6
      fixed bottom-10
      left-5
      py-2.5
      bg-green-400
      text-white
      font-medium
      text-xs
      leading-tight
      rounded-full
      shadow-md
      hover:bg-green-700 hover:shadow-lg
      transition
      group
      duration-150
      ease-in-out" data-bs-toggle="modal" data-bs-target="#modal">
      <span class="absolute
                    left-20
                    w-40
                    h-auto leading-loose
                    text-center
                    bg-gray-900
                    text-white
                    font-small
                    text-sm
                    font-bold
                    rounded-md
                    shadow-md
                    transition
                    duration-150
                    transform
                    origin-left
                    scale-0
                    group-hover:scale-100
                    ease-in-out">Add category </span>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M12 0c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm6 13h-5v5h-2v-5h-5v-2h5v-5h2v5h5v2z"/></svg>
    </button>
</div>
<%= render 'modal' %>