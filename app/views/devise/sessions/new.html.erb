<% if notice %>
  <div class="bg-yellow-100 rounded-lg py-5 px-6 text-base mb-3 flex justify-center" style="color: rgb(161 98 7);" role="alert"><%= notice %></div>
<% end %>
<% if alert %>
  <div class="bg-red-100 rounded-lg py-5 px-6 text-base mb-3 flex justify-center" style="color: rgb(185 28 28);" role="alert"><%= alert %></div>
<% end %>
<div class="block p-6 rounded-lg shadow-lg bg-white max-w-sm mx-auto mt-60" style=" margin-top: 15rem;">
<h1 class="mt-6 text-center text-3xl font-extrabold text-gray-900">Log In </h1>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email, class: "form-label inline-block text-gray-700 sr-only" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter email address", required: true, class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
    </div>
    <div class="form-group mb-6">
      <%= f.label :password, class: "form-label inline-block mb-2 text-gray-700 sr-only" %>
      <%= f.password_field :password, placeholder: "Enter password", required: true, class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
    </div>
    <div class="flex justify-between items-center mb-6">
      <div class="form-group form-check">
        <%= f.check_box :remember_me, class: "form-check-input appearance-none h-4 w-4 border border-gray-300 rounded-sm bg-white checked:bg-indigo-600 checked:border-indigo-600 focus:outline-none transition duration-200 mt-1 align-top bg-no-repeat bg-center bg-contain float-left mr-2 cursor-pointer" %>
        <%= f.label :remember_me, class: "form-check-label inline-block text-gray-800" %>
      </div>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Reset password", new_password_path(resource_name), class: "text-indigo-600 hover:text-indigo-700 focus:text-indigo-700 transition duration-200 ease-in-out", style: "margin-left: auto;" %><br />
      <% end %>
    </div>
    <%= f.submit "Log in", class: "w-full
      px-6
      py-2.5
      bg-indigo-800
      text-white
      font-medium
      text-m
      leading-tight
      rounded-full
      shadow-md
      hover:bg-purple-700 hover:shadow-lg
      focus:bg-purple-700 focus:shadow-lg focus:outline-none focus:ring-0
      active:bg-purple-800 active:shadow-lg
      transition
      duration-150
      ease-in-out
      cursor-pointer",
      style: "background-color: #6610f2;" %>
    <p class="text-gray-800 mt-6 text-center">Not a member? 
    <%= link_to "Register", new_registration_path(resource_name), class: "text-indigo-600 hover:text-indigo-700 focus:text-indigo-700 transition duration-200 ease-in-out"%><br />
    </p>
  <% end %>
</div>